{
  "compilerOptions": {
    "target": "ES2015",
    "downlevelIteration": true,
    "module": "NodeNext",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
